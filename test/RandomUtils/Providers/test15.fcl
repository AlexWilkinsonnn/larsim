# Test the seeds service.
# 
# Policy:          preDefinedSeed
# Valid:           yes
# Will succeed:    yes
# Purpose:         no range check in preDefinedSeed mode
# 
# LArSeedService does not even read range check configuration.
#
#

#include "messageService.fcl"

# Give this job a name.
process_name : SeedTest01

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 1
}

services :
{
  message : @local::mf_interactive
  RandomNumberGenerator: {}

  LArSeedService: {
    policy            : "preDefinedSeed"
    baseSeed          :     1
    maxUniqueEngines  :     6
    checkRange        :  true
    verbosity         :     2
    endOfJobSummary   :  false

    stest01 : {
      a : 3
      b : 5
    }

    stest02 : {
      a : 7
      c : 9
    }
  } # LArSeedService

}

physics :
{
  analyzers: {
    stest01 : {
      module_type : SeedTest01
      module_name : stest01
      testMode      : 1
      instanceNames : [ "a", "b" ]
    }

    stest02 : {
      module_type : SeedTest01
      module_name : stest02
      testMode      : 1
      instanceNames : [ "a", "c" ]
    }

  }

  e1 : [stest01, stest02]

  end_paths      : [e1]

}
