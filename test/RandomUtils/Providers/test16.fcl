# Test the seeds service.
#
# Policy:          preDefinedSeed
# Valid:           no (modules have instance configuration swapped)
# Will succeed:    yes
# Purpose:         named engine instances vs. nameless ones
#

#include "messageService.fcl"

# Give this job a name.
process_name : SeedTest01

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 1
}

services :
{
  message : @local::mf_interactive
  RandomNumberGenerator: {}

  LArSeedService: {
    policy            : "preDefinedSeed"
    verbosity         :     2
    endOfJobSummary   :  false

    stest01 : 3

    stest02 : {
      a : 5
      b : 7
    }
  } # LArSeedService

}

physics :
{
  analyzers: {
    stest01 : {
      module_type : SeedTest01
      module_name : stest01
      testMode      : 1
      instanceNames : [ "a", "b" ]
      expectedErrors: 4
    }

    stest02 : {
      module_type : SeedTest01
      module_name : stest02
      testMode      : 1
      instanceNames : [ "" ]
      expectedErrors: 2
    }

  }

  e1 : [stest01, stest02]

  end_paths      : [e1]

}
