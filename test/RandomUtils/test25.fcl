# Test the seeds service.
# 
# Policy:       perEvent
# Valid:        yes
# Will succeed: yes
# Purpose:      check normal operations
#

#include "messageService.fcl"

# Give this job a name.
process_name : SeedTest01


# Start form an empty source
source: {
  module_type : EmptyEvent
  maxEvents : 1
} # source


services: {
  message : @local::mf_interactive
  RandomNumberGenerator: {}

  LArSeedService: {
    policy            : "perEvent"
    verbosity         :     2
    endOfJobSummary   :  true
  }
} # services


physics: {
  analyzers: {
    stest01: {
      module_type   : SeedTest01
      module_name   : stest01
      testMode      : 1
      instanceNames : [ "a", "c" ]
      perEventSeeds : true
    }
    
    stest02: {
      module_type   : SeedTest01
      module_name   : stest02
      testMode      : 1
      instanceNames : [ "a", "b" ]
      perEventSeeds : true
    }
  }
  
  e1       : [stest01, stest02]
  end_paths: [e1]
  
} # physics
